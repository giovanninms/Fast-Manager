<div class="container  d-flex align-items-center h-100">
  <div class="card w-100">
    <div class="card-body">
      <form action="/paciente/novoPaciente/add" method="post">
        <div class="input-group mb-3 mt-4">
          <span class="input-group-text">Nome</span>
          <input name="nome" type="text" class="form-control text-uppercase w-25" required>
          <span class="input-group-text">CPF</span>
          <input type="text" name="cpf" id="" class="form-control text-uppercase" required>
        </div>
        <div class="input-group mb-3 mt-4">
          <span class="input-group-text">E-mail</span>
          <input name="email" type="text" class="form-control text-uppercase w-25" required>
          <span class="input-group-text">RG</span>
          <input name="rg" type="text" class="form-control text-uppercase" required>
        </div>
        <br>
        <div class="input-group mb-3 mt-4">
          <div class="input-group">
            <span class="input-group-text">Celular</span>
            <input name="celular" type="text" class="form-control text-uppercase" required>
            <span class="input-group-text">Telefone</span>
            <input name="telefone" type="text" class="form-control text-uppercase" required>
             <span class="input-group-text">Data Nascimento</span>
            <input name="dataNascimento" type="date" class="form-control text-uppercase calendar" required>
          </div>
        </div>
        <div class="mb-3 mt-2">
        <label for="basic-url" class="form-label">Endere√ßo:</label>
        <div class="input-group">
          <span class="input-group-text">Rua</span>
          <input name="rua" type="text" class="form-control text-uppercase" >
          <span class="input-group-text">Bairro</span>
          <input name="bairro" type="text" class="form-control text-uppercase" required>
        </div>
      </div>
      <div class="input-group mt-4">
        <span class="input-group-text">Cidade</span>
        <input name="cidade" type="text" class="form-control text-uppercase" required> 
        <span class="input-group-text">Estado</span>
        <select name="estado" class="form-select" required>
          <option hidden></option>
          <option value="1">One</option>
          <option value="2">Two</option>
          <option value="3">Three</option>
        </select>
        <span class="input-group-text">CEP</span>
        <input name="cep" type="text" class="form-control text-uppercase" required>
      </div>
      <br>
        <button type="submit" class="btn btn-success">Cadastrar</button>
      </form>
    </div>
  </div>
</div>
<script>
  var myModal = new bootstrap.Modal(document.getElementById('exampleModal'), {
    keyboard: false
  });
  myModal.show(); 
</script>