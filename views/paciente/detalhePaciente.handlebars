{{#if erros}}
<!-- Modal -->
<div class="modal fade show" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Erro!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {{#each erros}}
        <p class="alert alert-danger flex-row">{{menssagem}}</p>
        {{/each}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
{{/if}}


<a href="/paciente/" class="position-absolute top-10 start-0 ms-2 mt-2" title="Voltar">
  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-arrow-left"
    viewBox="0 0 16 16">
    <path fill-rule="evenodd"
      d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
  </svg>
</a>
<div class="container  d-flex justify-content-center  h-100">
  <div class="card align-self-center w-100">
    <div class="card-body">
      
        <div class="input-group mb-3 mt-4">
          <span class="input-group-text">Nome</span>
          <input name="nome" type="text" class="form-control text-uppercase w-25" value="{{paciente.nome}}" disabled>
          <span class="input-group-text">CPF</span>
          <input type="text" name="cpf" id="" class="form-control text-uppercase" value="{{paciente.cpf}}" disabled>
        </div>
        <div class="input-group mb-3 mt-4">
          <span class="input-group-text">E-mail</span>
          <input name="email" type="text" class="form-control text-uppercase w-25" value="{{paciente.email}}" disabled>
          <span class="input-group-text">RG</span>
          <input name="rg" type="text" class="form-control text-uppercase" value="{{paciente.rg}}" disabled>
        </div>
        <br>
        <div class="input-group mb-3 mt-4">
          <div class="input-group">
            <span class="input-group-text">Celular</span>
            <input name="celular" type="text" class="form-control text-uppercase" value="{{paciente.celular}}" disabled>
            <span class="input-group-text">Telefone</span>
            <input name="telefone" type="text" class="form-control text-uppercase" value="{{paciente.telefone}}" disabled>
             <span class="input-group-text">Data Nascimento</span>
            <input name="dataNascimento" type="text" class="form-control text-uppercase calendar" value="{{dataFormatada}}" disabled>
          </div>
        </div>
        <div class="mb-3 mt-2">
        <label for="basic-url" class="form-label">Endere√ßo:</label>
        <div class="input-group">
          <span class="input-group-text">Rua</span>
          <input name="rua" type="text" class="form-control text-uppercase" value="{{endereco.rua}}" disabled>
          <span class="input-group-text">Bairro</span>
          <input name="bairro" type="text" class="form-control text-uppercase" value="{{endereco.bairro}}" disabled>
        </div>
      </div>
      <div class="input-group mt-4">
        <span class="input-group-text">Cidade</span>
        <input name="cidade" type="text" class="form-control text-uppercase" value="{{endereco.cidade}}" disabled> 
        <span class="input-group-text">Estado</span>
        <select name="estado" class="form-select" disabled>
          <option>{{endereco.estado}}</option>
          
        </select>
        <span class="input-group-text">CEP</span>
        <input name="cep" type="text" class="form-control text-uppercase" value="{{endereco.cep}}" disabled>
      </div>
      <br>
        <a href="/paciente/editarPaciente/{{paciente._id}}" class="btn btn-success">Editar</a>
      
    </div>
  </div>
</div>
<script>
  var myModal = new bootstrap.Modal(document.getElementById('exampleModal'), {
    keyboard: false
  });
  myModal.show(); 
</script>