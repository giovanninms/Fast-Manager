<div class="container text-center  d-flex align-items-center h-100">
  <div class="card align-self-center w-100">
    <div class="card-body">
      {{#if agendamento}}
      <div class="input-group mb-3 mt-4">
        <span class="input-group-text">Nome</span>
        <input name="nome" type="text" class="form-control text-uppercase w-25" value="{{agendamento.nome}}" disabled>
        <span class="input-group-text">Especialização</span>
        <select name="especializacao" id="" class="form-control w-auto" disabled>
            <option value="" >{{agendamento.especializacao}}</option>
        </select>
      </div>
      <div class="input-group mb-3 mt-4">
        <span class="input-group-text">CPF</span>
        <input name="cpf" type="text" class="form-control text-uppercase" value="{{agendamento.cpf}}" disabled>
        <span class="input-group-text">CRM</span>
        <input name="crm" type="text" class="form-control text-uppercase" value="{{agendamento.crm}}" disabled>
        <span class="input-group-text">Celular</span>
          <input name="celular" type="text" class="form-control text-uppercase" value="{{agendamento.celular}}" disabled>
      </div>
      <br>
      <div class="input-group mb-3 mt-4">
        <div class="input-group">
          <span class="input-group-text">E-mail</span>
        <input name="email" type="text" class="form-control text-uppercase w-25" value="{{agendamento.email}}" disabled>
          <span class="input-group-text">Telefone</span>
          <input name="telefone" type="text" class="form-control text-uppercase" value="{{agendamento.telefone}}" disabled>
        </div>
      </div>
      <a  href="/agendamento/editaragendamento/{{agendamento._id}}" class="btn btn-success">Editar</a>
      {{/if}}
    </div>
  </div>
</div>