<div class="container text-center  d-flex align-items-center h-100">
  <div class="card align-self-center w-100">
    <div class="card-body">
      {{#if usuario}}
      <div class="input-group mb-3 mt-4">
        <span class="input-group-text">Nome</span>
        <input name="nome" type="text" class="form-control text-uppercase w-25" value="{{usuario.nome}}" disabled>
        <span class="input-group-text">Nivel de usuario</span>
        <select name="nivelUsuario" id="" class="form-control w-auto" disabled>
            <option value="" >{{usuario.nivelUsuario}}</option>
           
        </select>
      </div>
      <div class="input-group mb-3 mt-4">
        <span class="input-group-text">Nick</span>
        <input name="nick" type="text" class="form-control text-uppercase" value="{{usuario.nick}}" disabled>
        <span class="input-group-text">email</span>
        <input name="email" type="text" class="form-control text-uppercase" value="{{usuario.email}}" disabled>
        <span class="input-group-text">aenha</span>
          <input name="senha" type="text" class="form-control text-uppercase" value="{{usuario.senha}}" disabled>
      </div>
      <br>
      
      <a  href="/usuario/editarUsuario/{{usuario._id}}" class="btn btn-success">Editar</a>
      {{/if}}
    </div>
  </div>
</div>