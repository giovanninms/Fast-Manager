  {{#if erros}}
  <!-- Modal -->
  <div class="modal fade show" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Erro!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          {{#each erros}}
          <p class="alert alert-danger flex-row">{{menssagem}}</p>
          {{/each}}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
        </div>
      </div>
    </div>
  </div>
  {{/if}}
    {{#if item}}
  <div class="container text-center d-flex justify-content-center  h-75">
    <div class="card align-self-center w-75">
      <div class="card-body">
          <div class="mb-3 mt-4">
            <div class="input-group">
              <span class="input-group-text">Código</span>
              <input name="codigo" type="text" class="form-control w-25" required value="{{item.codigo}}" disabled>
              <span class="input-group-text">Descrição</span>
              <input name="descricao" type="text" class="form-control w-50" required value="{{item.descricao}}" disabled>
            </div>
          </div>
          <div class="input-group mb-3 mt-4">
            <span class="input-group-text">Quantidade</span>
            <input name="quantidade" type="number" class="form-control " required value="{{item.quantidade}}" disabled>
            <span class="input-group-text">Tipo de Cirurgia</span>
            <select name="tipoCirurgia" id="" class="form-control w-50" disabled>
              <option value="{{item.tipocirurgia}}" >{{item.tipoCirurgia}}</option>
            </select>
                      
          </div>
          <a href="/item/editarItem/{{item._id}}" ><button type="button" class="btn btn-success">Editar</button></a>
          <br>
      </div>
    </div>
  </div>
    {{/if}}
  <script>

    var myModal = new bootstrap.Modal(document.getElementById('exampleModal'), {
      keyboard: false
    });
    myModal.show(); 
  </script>